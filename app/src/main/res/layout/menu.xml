<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="366dp"
        android:layout_height="223dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="44dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="59dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/login"
        android:layout_width="101dp"
        android:layout_height="83dp"
        android:background="@mipmap/button_circle_left"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        android:layout_below="@+id/imageButton2"
        android:layout_toLeftOf="@+id/registration"
        android:layout_toStartOf="@+id/registration"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />


    <ImageButton
        android:id="@+id/home"
        android:layout_width="151dp"
        android:layout_height="160dp"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:background="@mipmap/button_circle_bot"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:id="@+id/registration"
        android:layout_width="101dp"
        android:layout_height="83dp"
        android:elevation="0dp"
        app:srcCompat="@android:drawable/ic_dialog_alert"
        android:background="@mipmap/button_circle_right"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>